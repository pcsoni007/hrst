<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Edu_app_background"
    android:orientation="vertical"
    tools:context=".ui.activity.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/hrst_toolbar"
            android:id="@+id/toolbar"
            />

         <TextView
             android:id="@+id/tvSkip"
             android:layout_width="wrap_content"
             style="@style/EduSubHeading_Form"
             android:text="@string/edu_lbl_skip"
             android:layout_centerVertical="true"
             android:padding="@dimen/Edu_spacing_standard"
             android:layout_alignParentEnd="true"
             android:textAllCaps="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@drawable/edu_bg_shadow"
            android:layout_marginStart="@dimen/Edu_spacing_control_half"
            android:layout_marginTop="@dimen/Edu_spacing_standard_new"
            android:layout_marginEnd="@dimen/Edu_spacing_standard"
            android:layout_marginBottom="@dimen/Edu_spacing_standard"
            >


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/Edu_spacing_middle"
                app:cardElevation="0dp"
                android:id="@+id/comReg"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:background="@color/Edu_color_setting"
                        >
                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:scaleType="fitCenter"
                            android:id="@+id/img1"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_recruiter" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Edu_spacing_standard_new"
                        android:lines="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/Edu_textColorPrimary"
                        android:textSize="@dimen/Edu_font_size_small"
                        android:layout_margin="@dimen/spacing_large"
                        android:text="@string/recruiter" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/Edu_textColorPrimary"
            android:textSize="@dimen/Edu_font_size_small"
            android:layout_margin="@dimen/spacing_middle"
            android:text="@string/or"
            android:layout_gravity="center_horizontal"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:background="@drawable/edu_bg_shadow"
            android:layout_marginStart="@dimen/Edu_spacing_control_half"
            android:layout_marginTop="@dimen/Edu_spacing_standard"
            android:layout_marginEnd="@dimen/Edu_spacing_standard"
            android:layout_marginBottom="@dimen/Edu_spacing_standard_new">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/Edu_spacing_middle"
                app:cardElevation="0dp"
                android:id="@+id/individualReg"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"
                        android:background="#FFDC64"
                        >
                        <ImageView
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:scaleType="fitCenter"
                            android:id="@+id/img2"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_person1" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Edu_spacing_standard_new"
                        android:lines="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/Edu_textColorPrimary"
                        android:textSize="@dimen/Edu_font_size_small"
                        android:layout_margin="@dimen/spacing_large"
                        android:text="@string/job_seeker" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </FrameLayout>

    </LinearLayout>



