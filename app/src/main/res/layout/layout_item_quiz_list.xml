<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_14sdp"
    android:layout_marginBottom="@dimen/Edu_spacing_standard"
    android:background="@drawable/edu_bg_shadow"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/Edu_spacing_middle"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivJobImg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/edu_ic_study1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/Edu_spacing_standard_new"
                android:layout_marginTop="@dimen/Edu_spacing_standard_new"
                android:layout_marginEnd="@dimen/Edu_spacing_standard_new"
                android:layout_marginBottom="@dimen/Edu_spacing_standard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/Edu_textColorPrimary"
                    android:textSize="@dimen/Edu_font_size_large"
                    tools:text="Bialogy basic \nScientific method" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Edu_spacing_standard"
                    android:layout_marginBottom="@dimen/Edu_spacing_standard">

                    <TextView
                        android:id="@+id/tvTotalJobs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/Edu_textColorSecondary"
                        android:textSize="@dimen/Edu_font_size_medium"
                        tools:text="4 to 8 lesson" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
